<?xml version="1.0" encoding="UTF-8"?>
<page:NewOfferPageXaml 
  xmlns="http://xamarin.com/schemas/2014/forms" 
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:page="clr-namespace:Scheduleless.Views;assembly=Scheduleless" 
  xmlns:controls="clr-namespace:Scheduleless.Controls;assembly=Scheduleless"
  xmlns:xlabs="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
  x:Class="Scheduleless.Views.NewOfferPage"
  Title="New Offer">
	<page:NewOfferPageXaml.Content>
      <StackLayout 
        Padding="5,10"
        Orientation="Vertical">
        
        <Label TextColor="#77d065" FontSize = "20" Text="Make an offer for this shift" />
         
        <controls:SimpleEntry
          x:Name="NoteEntry"
          Keyboard="Text"
          Placeholder="Note"
          TextColor="Black"
          Text="{Binding Note}"
          HeightRequest="45"
          HorizontalOptions="FillAndExpand" />
          

        <xlabs:BindablePicker 
            ItemsSource="{Binding ShiftsToOffer}" />

                       
         <Button 
            Text="Make Offer"
            Command="{Binding ShiftsToOffer}"
            BorderWidth="0" />
      </StackLayout>
	</page:NewOfferPageXaml.Content>
</page:NewOfferPageXaml>
