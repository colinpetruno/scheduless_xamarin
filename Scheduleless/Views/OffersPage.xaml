<?xml version="1.0" encoding="UTF-8"?>
<page:OffersPageXaml
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Scheduleless.Views.OffersPage"
	xmlns:controls="clr-namespace:Scheduleless.Controls;assembly=Scheduleless"
	xmlns:page="clr-namespace:Scheduleless.Views;assembly=Scheduleless"
	Title="Offers">
	<page:OffersPageXaml.Content>
		<ListView
			x:Name="OffersListView"
			ItemsSource="{Binding Offers}"
			IsPullToRefreshEnabled="true"
            HasUnevenRows="true"
			BackgroundColor="White">
			<ListView.ItemTemplate>
				<DataTemplate>
					<controls:OfferCell>
					</controls:OfferCell>
				</DataTemplate>
			</ListView.ItemTemplate>
			<ListView.Footer>
				<Label HeightRequest="0" />
			</ListView.Footer>
		</ListView>
	</page:OffersPageXaml.Content>
</page:OffersPageXaml>